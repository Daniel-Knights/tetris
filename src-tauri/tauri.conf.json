{
  "package": {
    "productName": "Tetris",
    "version": "../package.json"
  },
  "build": {
    "beforeDevCommand": "pnpm vite:dev",
    "beforeBuildCommand": "pnpm checks && pnpm vite:build",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.daniel-knights.tetris",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Tetris",
        "fullscreen": false,
        "resizable": false,
        "width": 800,
        "height": 600,
        "alwaysOnTop": true
      }
    ]
  }
}
